<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/dialog_et"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="@dimen/dialog_et"
        android:layout_marginBottom="2dp"
        android:gravity="center"
        android:text="@string/main_menu_refresh"
        android:textColor="@android:color/primary_text_light"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_dialog_name"
        android:inputType="textPersonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginStart="@dimen/dialog_et"
        android:layout_marginEnd="@dimen/dialog_et"
        android:layout_marginBottom="2dp"
        android:hint="@string/et_name"
        android:importantForAutofill="no" />
    <EditText
        android:id="@+id/et_dialog_number"
        android:inputType="phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginStart="@dimen/dialog_et"
        android:layout_marginEnd="@dimen/dialog_et"
        android:layout_marginBottom="8dp"
        android:hint="@string/et_number"
        android:importantForAutofill="no" />

    <EditText
        android:id="@+id/et_dialog_balance"
        android:inputType="phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginStart="@dimen/dialog_et"
        android:layout_marginEnd="@dimen/dialog_et"
        android:layout_marginBottom="8dp"
        android:hint="@string/et_balance"
        android:importantForAutofill="no" />

    <EditText
        android:id="@+id/et_dialog_plan"
        android:inputType="phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginStart="@dimen/dialog_et"
        android:layout_marginEnd="@dimen/dialog_et"
        android:layout_marginBottom="8dp"
        android:hint="@string/et_plan"
        android:importantForAutofill="no" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dialog_btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/dialog_btn_cancel"
            style="@style/TextAppearance.AppCompat.Button"/>

        <Button
            android:id="@+id/dialog_btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/dialog_btn_delete"
            style="@style/TextAppearance.AppCompat.Button"/>

        <Button
            android:id="@+id/dialog_btn_ok"
            style="@style/TextAppearance.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/dialog_btn_ok" />
    </LinearLayout>
</LinearLayout>